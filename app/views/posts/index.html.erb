<div class="posts">

  <div class="posts-title text-center">
    <h1 style= "color:white; font-size:50px"> Posts </h1>
  </div>


  <!-- <div class="posts-background text-center"> -->
    <div class="posts-parent text-center">

    <% @posts.each do |post| %>
      <div class="posts-child">
        <h3><%= link_to post.title, post_path(post) %></h3>
        <h5><%= post.body %></h5>
        <%= link_to ('Edit'), edit_post_path(post), :class => 'btn btn-primary btn-lg' %>
        <%= link_to ('Delete'), post_path(post), method: :delete, data: { confirm: "Delete?" }, :class => 'btn btn-primary btn-lg'%>
      </div>
    <% end %>
    </div>

</div>
