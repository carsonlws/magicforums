<div class="posts">

  <div class="posts-title text-center">
    <h1 style= "color:white; font-size:50px"> Edit Post </h1>
  </div>

  <div class="posts-parent text-center">
    <div class="posts-child">

    <%= form_for(@post, url: topic_post_path(@topic, @post), html: { id: "post-update-form" }) do |f| %>
      <h1 class="text-center">
        Edit Post
      </h1>

      <div class="form-group">
        <h4> <%= f.label :title_field, "Title" %> </h4>
        <%= f.text_field :title, required: true, id: "post_title_field", class: 'form-control' %>
      </div>

      <div class="form-group">
        <h4> <%= f.label :text_field, "Body" %> </h4>
        <%= f.text_field :body, id: "post_body_field", class: 'form-control' %>
      </div>

      <div class="form-group text-center">
        <%= f.submit "Update Post", class: "btn btn-success btn-lg" %>
      </div>
    <% end %>

  </div>
</div>
