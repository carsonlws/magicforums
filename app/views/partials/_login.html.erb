<div class="modal fade" id="login">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">

        <%= form_for(:user, url: sessions_path, html: { id: "user-login-form" }) do |f| %>
        <h1 class="text-center">
          Login
        </h1>

        <div class="form-group">
          <h4> <%= f.label :title_field, "Email" %> </h4>
          <%= f.text_field :email, required: true, id: "email_field", class: 'form-control' %>
        </div>

        <div class="form-group">
          <h4> <%= f.label :text_field, "Password" %> </h4>
          <%= f.password_field :password, required: true, id: "password_field", class: 'form-control' %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "Login", class: "btn btn-success btn-lg" %>
          <%= link_to ('Reset Password'), new_password_reset_path, :class => 'btn btn-success btn-lg' %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
