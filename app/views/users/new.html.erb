<div class="users">

    <div class="users-title text-center">
      <h1 style= "color:black; font-size:50px"> Create New User </h1>
    </div>

      <div class="users-parent text-center">
        <div class="users-child text-center">

        <%= form_for(@user, url: users_path, html: { id: "user-create-form" }) do |f| %>

        <div class="form-group">
          <h4> <%= f.label :text_field, "Username" %> </h4>
          <%= f.text_field :username, required: true, id: "username_field", class: 'form-control' %>
        </div>


        <div class="form-group">
          <h4> <%= f.label :title_field, "Email" %> </h4>
          <%= f.text_field :email, required: true, id: "email_field", class: 'form-control' %>
        </div>

        <div class="form-group">
          <h4> <%= f.label :password_field, "Password" %> </h4>
          <%= f.password_field :password, required: true, id: "password_field", class: 'form-control' %>
        </div>

        <div class="form-group">
          <h4> <%= f.label :password_field, "Password Confirmation" %> </h4>
          <%= f.password_field :password_confirmation, required: true, id: "password_field", class: 'form-control' %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "Create User", class: "btn btn-success btn-lg" %>



        </div>
        <% end %>
      </div>
  </div>
  </div>
