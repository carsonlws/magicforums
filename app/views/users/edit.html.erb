<div class="users">


  <div class="users-parent text-center">
    <div class="users-child">

    <%= form_for(@user, url: user_path(@user), html: { id: "user-update-form" }) do |f| %>
      <h1 class="text-center">
        Edit User
      </h1>

      <div class="form-group">
        <h4> <%= f.label :text_field, "Username" %> </h4>
        <%= f.text_field :username, required: true, id: "username_field", class: 'form-control' %>
      </div>

      <div class="form-group">
        <h4> <%= f.label :title_field, "Email" %> </h4>
        <%= f.text_field :email, required: true, id: "email_field", class: 'form-control' %>
      </div>

      <div class="form-group">
        <h4> <%= f.label :text_field, "Password" %> </h4>
        <%= f.password_field :password, required: true, id: "password_field", class: 'form-control' %>
      </div>

      <div class="form-group">
        <h4> <%= f.label :text_field, "Password Confirmation" %> </h4>
        <%= f.password_field :password_confirmation, required: true, id: "password_field", class: 'form-control' %>
      </div>

      <div class="form-group text-center">
        <%= f.submit "Update", class: "btn btn-success btn-lg" %>
      </div>
    <% end %>

  </div>
</div>
