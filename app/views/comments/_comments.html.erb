<div id="comment-edit-form">
    <h3><%= comment.body %></h3>
    <%= image_tag comment.image, class: "img-settings img-responsive center-block" %>
    <%= link_to ('Edit'), edit_topic_post_comment_path(@topic, @post, comment), remote: true, class: 'btn btn-primary btn-md' %>
    <%= link_to ('Delete'), topic_post_comment_path(@topic, @post, comment), method: :delete, data: { confirm: "Delete?" }, class: 'btn btn-primary btn-md'%>
</div>
